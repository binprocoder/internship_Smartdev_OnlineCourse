<!-- Section banner -->
<link rel="stylesheet" href="css/signup.css">

<section class="video__banner" id="video__banner">
    <div class="content">
        <h3>Le Academy</h3>
        <div class="content__sub">
            <a href="/">Trang chủ</a>
            <p>Đăng nhập</p>
            <p>Tài khoản mới</p>
        </div>
    </div>
</section>
<!-- End banner -->
<!-- Form signup section -->

<section class="signUp__section">
    <div class="container">
        <h3>Tài khoản mới</h3>
        <div class="sub__header mt-2 mb-2">
            <p>Have an account?</p>
            <a href="" id="login-btn--sub">Login?</a>
        </div>
        <form id="signupForm" method='Post' action='/signup'>
            <div class="form-group mt-2">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                    placeholder="Enter email" name="username" required>
            </div>
            <div class="form-group mt-2">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"
                    name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{7,}"
                    title="Phải có 1 kí tự số và có chữ hoa và thường, lớn hơn 6 ký tự" required>
            </div>
            <button type="submit" class="btn btn-signUp mt-3">Submit</button>
        </form>
    </div>
</section>
<!-- End form signup section -->
<!-- Login form container-->
<div class="login-form-container">
    <i class="fas fa-times" id="form-close"></i>
    <form action="" id="form-login">
        <h3>Login to your account</h3>
        <h2>Don't have an account?<a href="/signup"> Sign up!</a></h2>
        <input type="email" class="box" placeholder="email" id="email" required>
        <input type="password" class="box" placeholder="Password" id="password" name="password"
            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{7,}"
            title="Phải có 1 kí tự số và có chữ hoa và thường, lớn hơn 6 ký tự" required>
        <input type="checkbox" id="remember">
        <label for="remember">Nhớ tên tài khoản</label>
        <a href="#">Quên mật khẩu</a>
        <button type="submit" class="btn btn-login">Đăng nhập</button>
    </form>
</div>
<!-- End login form -->

<script src="js/login.js"></script>
