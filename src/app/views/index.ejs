    <!-- Section banner -->
    <section class="video__banner" id="video__banner">
        <div class="content">
            <h3>Học lập trình miễn phí</h3>
            <p>Dành cho các bạn muốn theo đuổi ngành công nghệ thông tin</p>
            <button type="button" class="btn">Ready to get started?</button>
        </div>
        <div class="video-container">
            <video src="images/vid_banner.mp4" id="video-slider" loop autoplay muted></video>
        </div>
    </section>
    <!-- End banner -->
    <!-- Login form container-->
    <div class="login-form-container">
        <i class="fas fa-times" id="form-close"></i>
        <form action="" id="form-login">
            <h3>Login to your account</h3>
            <h2>Don't have an account?<a href="./signup"> Sign up!</a></h2>
            <input type="email" class="box" placeholder="email" id="email" required>
            <input type="password" class="box" placeholder="Password" id="password" name="password"
                pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{7,}"
                title="Phải có 1 kí tự số và có chữ hoa và thường, lớn hơn 6 ký tự" required>
            <input type="checkbox" id="remember">
            <label for="remember">Nhớ tên tài khoản</label>
            <a href="#">Quên mật khẩu</a>
            <button type="submit" class="btn btn-login">Đăng nhập</button>
        </form>
    </div>
    <!-- End login form -->

    <!-- Section course -->
    <section class="course__section">
        <div class="container">
            <div class="content">
                <h3>Khóa học lập trình cơ bản</h3>
                <p>Khóa học dành cho người mới bắt đầu học lập trình. Chưa có kiến thức về nền tảng lập trình</p>
            </div>
            <div class="row" id="list-courses">
                <!-- Dùng ejs foreach -->
                <% courses.forEach((course)=>{%>
                <% price = new Intl.NumberFormat().format(course.price)%>

                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12"  >
                    <div class="course-item mb-3 mt-3">
                      <a href="https://hoclaptrinhonline.asia/course/view.php?id=22">
                          <div class="img-item">
                              <img class="img-course" src="<%= course.anh %>"
                                  alt="<%- course.name%>">
                          </div>
                      </a>
                      <div class="detail-item">
                          <p>Updated <%- course.date%></p>
                          <a href="https://hoclaptrinhonline.asia/course/view.php?id=22">
                              <h3><%- course.name%></h3>
                          </a>
                          <p><%- course.description%></p>
                      </div>
                      <hr />
                      <div class="footer-item">
                          <i class="far fa-user"><span><%- course.numberLearn%></span></i>
                          <i class="far fa-comments"><span><%- course.comment%></span></i>
                          <p>Giá tiền: <span><%- price%></span></p>
                      </div>
                    </div>
                </div>
                <%}); %>
            </div>
            <div id="pagination">

            </div>
        </div>
    </section>
